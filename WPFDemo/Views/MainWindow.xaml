<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WPFDemo.ViewModels"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="MVVM Demo" Height="450" Width="800">
    <Window.DataContext>
        <vm:PersonViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label Grid.ColumnSpan="2" Grid.Row="0" Content="MVVM Demo Project (Person)" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Vorname" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center"/>
        <Label Content="Nachname" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center"/>
        <Label Content="Alter" HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Text="{Binding Vorname}" HorizontalAlignment="Left" Margin="20,0,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="250"/>
        <TextBox Grid.Column="1" Text="{Binding Nachname}" HorizontalAlignment="Left" Margin="20,0,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="250"/>
        <TextBox Grid.Column="1" Text="{Binding Alter}" HorizontalAlignment="Left" Margin="20,0,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Center" Width="250"/>
        <Button Grid.Column="1" Command="{Binding CreatePersonCommand}" Content="Speichern" HorizontalAlignment="Left" Margin="375,0,0,0" Padding="5" Grid.Row="2" VerticalAlignment="Center"/>
        <Button Grid.Column="1" Command="{Binding DeletePersonCommand}" Content="Löschen" HorizontalAlignment="Left" Margin="375,0,0,0" Padding="5" Grid.Row="3" VerticalAlignment="Center"/>
        <ListView Grid.ColumnSpan="2" Grid.Row="4" ItemsSource="{Binding People}" Margin="10" SelectedItem="{Binding SelectedPerson}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Vorname" DisplayMemberBinding="{Binding Vorname}" Width="150"/>
                    <GridViewColumn Header="Nachname" DisplayMemberBinding="{Binding Nachname}" Width="150"/>
                    <GridViewColumn Header="Alter" DisplayMemberBinding="{Binding Alter}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
